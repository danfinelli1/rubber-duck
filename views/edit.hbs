<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Question</title>

    <!-- STYLESHEETS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="../styles/style.css">

    <!-- VENDOR SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.6/handlebars.js"></script>

    <!-- APPLICATION SCRIPTS -->
    <script src="../scripts/app.js"></script>
</head>

<body>

    <section id='edit-form' class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">

                <form class="edit-form" data-id="{{question._id}}">
                    <fieldset>

                        <legend>Edit Question</legend>
                        <input id="language" name="language" type="hidden" class="form-control" value="{{question.text}}">
                        <br>
                        <div class="form-group">
                            <label class="col-md-6 control-label" for="text">Question</label>
                            <div class="col-md-6">
                                <input id="text" name="text" type="text" class="form-control" value="{{question.text}}">
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <label class="col-md-6 control-label" for="relatedLinks">Related Links (separated by commas)</label>
                            <div class="col-md-6">
                                <textarea class="form-control" id="relatedLinks" name="relatedLinks" value="{{question.relatedLinks}}"></textarea>
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <br>
                            <div class="col-md-6">
                                <button data-id="{{question._id}}" id="singlebutton" name="singlebutton" class="btn btn-primary" >Save Question</button>
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <br>
                            <div class="col-md-6">
                                <button data-id="{{question._id}}" id="deletebutton" name="deletebutton" class="btn btn-delete" type="delete">Delete Question</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</body>

</html>
